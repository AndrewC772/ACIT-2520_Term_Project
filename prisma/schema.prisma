generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Reminder {
  description String?
  id          Int     @id @default(autoincrement())
  completed   Boolean @default(false)
  title       String
  authorId    Int?
}

model User {
  email       String  @unique
  id          Int     @id @default(autoincrement())
  name        String?
  password    String?
  profile_pic String?
}
