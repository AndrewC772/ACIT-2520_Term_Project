generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Reminder {
  id        Int     @id @default(autoincrement())
  title     String
  description   String?
  completed Boolean @default(false)
  authorId  Int?
  author    User?   @relation(fields: [authorId], references: [id])
}

model User {
  email     String  @unique(map: "User.email")
  id        Int     @id @default(autoincrement())
  name      String
  password  String
  reminders Reminder[]
  profile_pic String?
}
